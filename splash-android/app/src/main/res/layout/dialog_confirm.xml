<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        style="@style/TextViewH5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Manage All Your Wallets in One Cosmostation Wallet!"
        android:textColor="@color/color_mode_base05"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/content"
        style="@style/TextViewH6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/notice_msg"
        android:textColor="@color/color_mode_base05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_btn"
            style="@style/FlatButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/drawable_button_background"
            android:padding="12dp"
            android:layout_marginEnd="3dp"
            android:text="Confirm"
            android:textSize="16sp" />

        <Button
            android:id="@+id/link_btn"
            style="@style/FlatButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/drawable_button_background"
            android:padding="12dp"
            android:text="Download"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>